<!DOCTYPE html>
<html lang="pt-BR">
<%- include('./partials/head'); %>

  <body>
    <form method="POST" action="/complaint/redirect/<%=userId%>" enctype="multipart/form-data">
      <label for="complaintPhoto" id="boxPhoto"></label>
      <input type="file" accept="image/jpeg" id="complaintPhoto" name="complaint-photo" onchange="fileReader(event)" required>
      <fieldset>
        <label for="address">Endereço</label>
        <input type="text" id="address" name="address" required>
        <label for="description">Descrição:</label>
        <textarea name="description" id="description" required></textarea>
        <button type="submit" id="saveButton">Salvar</button>
      </fieldset>
    </form>
    <footer>
      <a href="/room/<%=userId%>"><i class="fas fa-arrow-left"></i> Voltar</a>
    </footer>
    <script src="/scripts/scripts.js"></script>
  </body>

</html>