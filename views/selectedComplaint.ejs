<!DOCTYPE html>
<html lang="pt-BR">
<%- include('./partials/head'); %>

  <body>
    <form method="POST" action="/complaint/update/<%=userId%>/<%=complaintId%>" enctype="multipart/form-data">
      <label for="complaintPhoto" id="boxPhoto" style="background-image: url('/images/complaint-photos/<%=complaint.image%>');"></label>
      <input type="file" accept="image/jpg" id="complaintPhoto" name="complaint-photo" onchange="fileReader(event)">
      <fieldset>
        <label for="address">Endereço</label>
        <input type="text" id="address" name="address" value="<%=complaint.address%>">
        <label for="description">Descrição:</label>
        <textarea name="description" id="description" required><%=complaint.description%></textarea>
        <button type="submit" id="saveButton">Salvar</button>
      </fieldset>
    </form>
    <footer>
      <a href="/room/<%=userId%>"><i class="fas fa-arrow-left"></i> Voltar</a>
    </footer>
    <script src="/scripts/scripts.js"></script>
  </body>

</html>